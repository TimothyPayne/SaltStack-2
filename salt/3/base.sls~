network_conf:
  file.managed:
    - name: /etc/network/interfaces
    - source: salt://config/ip3
net_reload:
  cmd.run:
    - name: ifdown eth0 eth1 eth2 && ifup eth0 eth1 eth2


hostname:
  cmd.run:
    - name: |
       echo network > /etc/hostname
       hostname network
  file.managed:
    - name: /etc/hosts
    - source: /config/hosts


ntp:
  pkg:
    - installed
  service:
    - running
    - enable: true


mysql:
  pkg:
    - name: python-mysqldb
    - installed
  service:
    - running
    - enable: true


minion_mysql:
  file.managed:
    - name: /etc/salt/minion
    - source: salt://config/minion
  cmd.run:
    - name: service salt-minion restart







